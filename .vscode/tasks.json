{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sbt: run",
            "type": "shell",
            "command": "sbt",
            "args": ["run"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "sbt: test",
            "type": "shell",
            "command": "sbt",
            "args": ["test"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "sbt: test current file",
            "type": "shell",
            "command": "sbt",
            "args": ["\"test:testOnly *${fileBasenameNoExtension}\""],
            "group":  "test",
            "presentation": {
                "focus": true
            }
        }
    ]
}
